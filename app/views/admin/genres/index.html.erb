  <h3 class="mb-5 mini-title">ジャンル一覧・追加</h3>

  <div class="row">
    <%= form_with model:@genre, url: "/admin/genres", method: :post do |f| %>
      <div class="field form-group row">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
      </div>
      <span class="actions">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </span>
    <% end %>
  </div>


  <!--レイアウト・編集ボタン未完成-->
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            編集する
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

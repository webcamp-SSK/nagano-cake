<div class="row">
  <h3 class="mb-5 mini-title">ジャンル一覧・追加</h3>
</div>
<div class="p-5">
  <%= form_with model:@genre, url: "/admin/genres", method: :post, class:"form-inline" do |f| %>
    <div class="field form-group">
      <%= f.label :ジャンル名, class:"mr-5" %>
      <%= f.text_field :name, placeholder: "ジャンル名" %>
    </div>
    <%= f.submit "新規登録", class:"btn btn-success ml-5 px-5" %>
  <% end %>
</div>

<div class="px-5 mx-5 row">
  <table class="table col-4">
    <thead class="thead-light">
      <tr>
        <th colspan="2">ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td></td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
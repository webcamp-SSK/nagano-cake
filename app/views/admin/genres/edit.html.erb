<div class="row pl-5">
  <h3 class="mb-5 mt-5 mini-title">ジャンル編集</h3>
</div>
<div class="p-5">
  <%= form_with model:@genre, url: admin_genre_path(@genre), method: :patch, class:"form-inline" do |f| %>
    <div class="field form-group">
      <%= f.label :ジャンル名, class:"mr-5" %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit "変更を保存", class:"btn btn-success ml-5 px-5" %>
  <% end %>
</div>
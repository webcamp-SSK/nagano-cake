<div class="p-5 ml-5">
  <div class="pl-5">
    <h3 class="ml-5 mini-title">ジャンル編集</h3>
  </div>
</div>
<div class="px-5 mx-5">
  <%= form_with model:@genre, url: admin_genre_path(@genre), method: :patch, class:"form-inline pl-5" do |f| %>
    <div class="field form-group">
      <%= f.label :ジャンル名, class:"mr-5" %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit "変更を保存", class:"btn btn-success btn-lg ml-5 px-4" %>
  <% end %>
</div>
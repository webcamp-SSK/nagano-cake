<h3 class="mb-5 ml-5 mini-title">商品詳細</h3>
<div class="row">
  <div class="col-3 offset-1">
    <%= image_tag @item.image, size: "300x200" %>
  </div>
  <div class="col-6">
    <table>
      <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= @item.is_active_i18n %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
  </div>
</div>

<div class="mb-4">
  <h3 class="ml-5 mini-title"><%= @customer.last_name+@customer.first_name %>さんの注文履歴</h3>
</div>
<div class="col-11">
  <div class="d-flex justify-content-end mb-4">
    <%= link_to "#{@customer.last_name+@customer.first_name}さんの一覧を表示", admin_customer_order_index_path, class: "mt-2 mr-3" %>
    <%= form_with url: admin_customer_order_index_path(@customer.id), method: :get do |f| %>
      <%= f.select :status, Order.statuses.keys.map { |k| [t("enums.order.status.#{k}"), k] } %>
      <%= f.submit "並び替える", class: "btn btn-info" %>
    <% end %>
  </div>
</div>

<div class="px-5">
  <div class="row mx-5">
    <table class="table mx-5 table border-bottom table-hover">
      <thead class="thead-light">
        <tr>
          <th style="width: 10%"></th>
          <th style="width: 40%">購入日時</th>
          <th style="width: 20%">注文個数</th>
          <th style="width: 30%">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr onclick='window.location="<%= '/admin/orders/' + order.id.to_s %>"' role="link">
            <td style="width: 10%"></td>
            <td class="py-4" style="width: 40%">
              <u><%= link_to order.created_at.strftime('%Y/%m/%d　%H:%M:%S'), admin_order_path(order.id), class:"text-dark" %></u>
            </td>
            <td  class="py-4" style="width: 20%">
              <%= order.order_details.inject(0) { |sum, order_detail| sum + order_detail.amount } %>
            </td>
            <td  class="py-4" style="width: 30%">
              <%= order.status_i18n %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @orders %>
<div class="row p-5">
  <h3 class="ml-5 mini-title">注文情報確認</h3>
</div>

<div class="row mx-5">
  <table class="table mx-5 col-7 table-bordered table-background">
    <thead class="thead-light">
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td style="width: 50%">
            <%= image_tag cart_item.item.image, size: '50x50' %>
            <%= cart_item.item.name %>
          </td>
          <td style="width: 17%">
            <%= cart_item.item.with_tax_price.to_s(:delimited) %>
          </td>
          <td style="width: 16%">
            <%= cart_item.amount %>
          </td>
          <td style="width: 17%">
            <%= cart_item.subtotal.to_s(:delimited) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table class="table table-bordered col-3">
    <tr class="table-background">
      <td style="width: 50%" class="table-active">送料</td>
      <td style="width: 50%">800</td>
    </tr>
    <tr class="table-background">
      <td style="width: 50%" class="table-active">商品合計</td>
      <td style="width: 50%"><%= @items_price.to_s(:delimited) %></td>
    </tr>
    <tr class="table-background">
      <td style="width: 50%" class="table-active">請求金額</td>
      <td style="width: 50%"><%= @total_payment.to_s(:delimited) %></td>
    </tr>
  </table>

</div>

<div class="px-5 pt-5 ml-5 d-flex">
  <h5 class="mr-3"><b>支払方法</b></h5><span><%= @order.payment_method_i18n %></span>
</div>

<div class="px-5 ml-5 mt-3 d-flex">
  <h5 class="mr-3"><b>お届け先</b></h5><span><%= "〒" + @order.postal_code + @order.address %><br><%= @order.name %></span>
</div>

<%= form_with model:@order, url:orders_path, method: :post do |f| %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :shipping_cost, :value => @shipping_cost %>
  <%= f.hidden_field :total_payment, :value => @total_payment %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <div class="row">
    <%= f.submit "注文を確定する", class:"btn btn-success btn-lg col-2 offset-5" %>
  </div>

<% end %>
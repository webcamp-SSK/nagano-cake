<div class="row p-5">
  <h3 class="ml-5 mini-title">ショッピングカート</h3>
</div>

<div class="row mx-5">
  <table class="table mx-5 col-9">
    <thead class="thead-light">
      <tr>
        <th colspan="4">商品名</th>
        <th>単価（税込）</th>
        <th colspan="4">数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td colspan="4">
            <%= image_tag cart_item.item.image, size: '50x50' %>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= cart_item.item.with_tax_price.to_s(:delimited) %>
          </td>
          <td>
            <%= cart_item.amount %>
          </td>
          <td colspan="4">
            <!--小計-->
            <%= cart_item.subtotal.to_s(:delimited) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table class="table col-3">
    <tr>
      <th>送料</th>
      <th>800</th>
    </tr>
    <tr>
      <th>商品合計</th>
      <td><%= @items_price.to_s(:delimited) %></td>
    </tr>
    <tr>
      <th>請求金額</th>
      <th><%= @total_payment.to_s(:delimited) %></th>
    </tr>
  </table>

</div>


<h5>支払方法</h5><%= @order.payment_method_i18n %>

<h5>お届け先</h5><%= "〒" + @order.postal_code + @order.address %><br><%= @order.name %>

<%= form_with model:@order, url:orders_path, method: :post do |f| %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :shipping_cost, :value => @shipping_cost %>
  <%= f.hidden_field :total_payment, :value => @total_payment %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.submit "注文を確定する", class:"btn btn-primary" %>
<% end %>
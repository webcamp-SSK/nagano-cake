<div class="row p-5">
  <h3 class="ml-5 mini-title">ショッピングカート</h3>
  <%= link_to 'カートを空にする', cart_item_destroy_all_path(current_customer.cart_items), method: :delete, class: "btn btn-danger" %>
</div>

<div class="row mx-5">
  <% if @cart_items.present? %>
    <table class="table mx-5 table-bordered">
      <thead class="thead-light">
        <tr>
          <th colspan="4">商品名</th>
          <th>単価（税込）</th>
          <th colspan="4">数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td colspan="4">
              <%= image_tag cart_item.item.image, size: '50x50' %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.with_tax_price.to_s(:delimited) %>
            </td>
            <td>
              <%= form_with model: cart_item, method: :patch, local:true do |f| %>
                <div class="form-group">
                  <%= f.select :amount, *[1..10] %>
                  <%= f.submit "変更", class: 'btn btn-sm btn-success' %>
                </div>
              <% end %>
            </td>
            <td colspan="4">
              <!--小計-->
              <%= cart_item.subtotal.to_s(:delimited) %>
            </td>
            <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div>商品はまだありません</div>
  <% end %>
  <div class="row">
    <%= link_to '買い物を続ける', items_path, class: "btn btn-primary" %>
    <div class="row col-4 offset-8">
      <table class="table table-bordered">
        <tr>
          <th class="table-active">合計金額</th>
          <td><%= @total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

    <div class="">
      <%= link_to "情報入力に進む", new_order_path, class: 'btn btn-sm btn-success' %>
    </div>

</div>
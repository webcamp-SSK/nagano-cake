<div class="row col-11 offset-1 mb-5">
  <h3 class="mini-title">ショッピングカート</h3>
  <%= link_to 'カートを空にする', cart_item_destroy_all_path(current_customer.cart_items),
                                  method: :delete, class: "btn btn-danger offset-7", data: { confirm: "カートの中身を全て削除しますか？" } %>
</div>

  <div class="col-9 offset-1">
    <%= render 'cart_items_index', cart_items: @cart_items %>
  </div>
<div class="row offset-1 my-4">
  <div><%= link_to '買い物を続ける', root_path, class: "btn btn-primary" %></div>
  <div class="col-4 offset-5">
    <table class="table table-bordered">
      <tr>
        <th class="table-active">合計金額</th>
        <td><%= @total_price.to_s(:delimited) %></td>
      </tr>
    </table>
  </div>
</div>

<div class="d-flex justify-content-center">
  <div class="col-3"><%= link_to "情報入力に進む", new_order_path, class: 'btn btn-success' %></div>
</div>

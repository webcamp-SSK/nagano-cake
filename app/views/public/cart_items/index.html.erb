<div class="p-5">
  <h3 class="ml-5 mini-title">ショッピングカート</h3>
</div>

<div class="row mx-5">
  <table class="table mx-5 table-borderless">
    <thead class="thead-light">
      <tr>
        <th colspan="4">商品名</th>
        <th>単価（税込）</th>
        <th colspan="4">数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= @cart_items.each do |cart_item| %>
        <tr>
          <td colspan="4">
            <%= image_tag cart_item.item.image, size: '50x50' %>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= cart_item.item.with_tax_price.to_s(:delimited) %>
          </td>
          <td>
            <%= form_with model: cart_item, method: :patch, local:true do |f| %>
              <div class="form-group">
                <%= f.select :amount, *[1..10]%>
                <%= f.submit "変更", class: 'btn btn-sm btn-success' %>
              </div>
            <% end %>
          </td>
          <td colspan="4">
            <!--小計-->
            <%= (cart_item.item.with_tax_price * cart_item.amount).to_s(:delimited) %>
          </td>
          <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

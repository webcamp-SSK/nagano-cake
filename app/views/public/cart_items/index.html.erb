<div class="row p-5">
  <div class="row">
    <h3 class="ml-5 mini-title">ショッピングカート</h3>
    <%= link_to 'カートを空にする', cart_item_destroy_all_path(current_customer.cart_items), method: :delete, class: "btn btn-danger offset-3" %>
  </div>
<!--</div>-->

  <div class="mx-5 my-3">
    <% if @cart_items.present? %>
       <%= render 'cart_items_index', cart_items: @cart_items%>
    <% else %>
      <div>商品はまだありません</div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-9 offset-1">
    <%= link_to '買い物を続ける', items_path, class: "btn btn-primary" %>
    <div class="col-4 offset-4">
      <table class="table table-bordered">
        <tr>
          <th class="table-active">合計金額</th>
          <td><%= @total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

  <div class="block">
    <%= link_to "情報入力に進む", new_orders_path, class: 'btn btn-sm btn-success' %>
  </div>

<div class="p-5">
  <h3 class="ml-5 mini-title">ショッピングカート</h3>
</div>

<div class="row mx-5">
  <table class="table mx-5 table-borderless">
    <thead class="thead-light">
      <tr>
        <th colspan="4">商品名</th>
        <th>単価（税込）</th>
        <th colspan="4">数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td colspan="4">
            <%= link_to image_tag cart_item.items.image %>
            <%= cart_item.name %>
          </td>
          <td>
            <%= cart_item.price.to_s(:delimited) %>
          </td>
          <td>
            <%#= 数量 %>
          </td>
          <td colspan="4">
            <%#= 小計 %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @items %>
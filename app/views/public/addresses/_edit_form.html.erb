 <%= form_with model: @address, method: :patch do |f| %>
  <div class="form-group row">
    <%= f.label :postal_code, '郵便番号（ハイフンなし）', class: "col-3" %>
    <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: '0000000', class: "form-control  col-3" %>
  </div>
  
  <div class="form-group row">
    <%= f.label :address, '住所', class: "col-3" %>
    <%= f.text_field :address, autocomplete: "address", placeholder: '東京都渋谷区代々木神園町0-0', class: "form-control  col-5" %>
  </div>
  
  <div class="form-group row">
    <%= f.label :name, '宛名', class: "col-3" %>
    <%= f.text_field :name, autocomplete: "name", placeholder: '令和道子', class: "form-control col-3" %>
    <%= f.submit "変更内容を保存", class: "btn btn-success col-2 offset-2" %>
  </div>
<% end %>
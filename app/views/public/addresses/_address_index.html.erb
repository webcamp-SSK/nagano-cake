<thead　class="thead-dark">
  <tr>
    <th class="col-1">郵便番号</th>
    <th class="col-5">住所</th>
    <th class="col-2">宛名</th>
    <th class="col-4"></th>
  </tr>
</thead>
<tbody>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td>
      <div class="d-flex justify-content-center">
        <%= link_to '編集する', edit_address_path(address), class: "btn btn-success" %>
        <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn-danger offset-1" %>
      </div>
    </td>
  </tr>
</tbody>
<div class="px-5 mx-5">
  <h3 class="mb-5 mini-title">配達先登録 ／ 一覧</h3>
</div>
<div class="col-11 offset-1 mb-5">
  <div id="error"><%= render 'layouts/errors', obj: @address %></div>
  <div id="address_form">
    <%= render 'public/addresses/address_form', address: @address %>
  </div>
</div>

<div class="col-10 offset-1">
  <table class="table table-bordered table-background">
    <thead class="thead-light">
      <tr>
        <th class="col-1">郵便番号</th>
        <th class="col-5">住所</th>
        <th class="col-2">宛名</th>
        <th class="col-4"></th>
      </tr>
    </thead>
    <tbody id="another_address">
      <%= render 'public/addresses/address_index', addresses: @addresses %>
    </tbody>
  </table>
</div>
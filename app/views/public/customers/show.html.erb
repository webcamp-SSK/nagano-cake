<div class="row">
  <div class="col-11 offset-1">
    <h3 class="mb-5 mini-title">マイページ</h3>

    <table class="table table-borderless">
      <tr class="address-index-button">
        <th class="col-2"><h3><b>登録情報</b></h3></th>
        <td><%= link_to '編集する', edit_customers_path(current_customer), class: "btn btn-success col-2" %></td>
      </tr>
    </table>

    <table class="table table-bordered col-7 ml-3 mb-4 table-background">
      <tbody>
        <tr>
          <th class="col-4 table-active">氏名</th>
          <td><%= current_customer.last_name %>　<%= current_customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-active">カナ</th>
          <td><%= current_customer.last_name_kana %>　<%= current_customer.first_name_kana %></td>
        <tr>
          <th class="table-active">郵便番号</th>
          <td><%= current_customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-active">住所</th>
          <td><%= current_customer.address %></td>
        </tr>
        <tr>
          <th class="table-active">電話番号</th>
          <td><%= current_customer.telephone_number %></td>
        </tr>        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= current_customer.email %></td>
        </tr>
      </tbody>
    </table>
    <table class="table table-borderless ml-0 mb-5">
      <tr class="address-index-button">
        <th class="col-2"><h3><b>配送先</b></h3></th>
        <td><%= link_to '一覧を見る', addresses_path, class: "btn btn-primary col-3" %></td>
      </tr>
      <tr class="order-index-button">
        <th class="col-2"><h3><b>注文履歴</b></h3></th>
        <td><%= link_to '一覧を見る', orders_path, class: "btn btn-primary col-3" %></td>
      </tr>
    </table>

  </div>
</div>
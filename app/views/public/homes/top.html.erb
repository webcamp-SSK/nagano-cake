<!--<div class="container">-->
  <div class="row" >
    <div class = "genre_box offset-1 col-2 mt-5" >
      <%= render 'public/items/genre_search', genres: @genres %>
    </div>
      <div class="col-8">
        <div class= "row d-flex justify-content-center">
          <div class= "card border border-0 mt-5" >
            <div id="slide">
              <div id="theTarget">
                <div class="image1"></div>
                <div class="image2"></div>
                <div class="image3"></div>
                <div class="image4"></div>
                <div class="image5"></div>
              </div>
            </div>
              <div class="card-img-overlay d-flex justify-content-center align-items-center" >
                <p class="card-text" >
                  ようこそ、ながのCAKEへ!<br>
                  このサイトは、ケーキ販売のECサイトになります。<br>
                  会員でない方も商品の閲覧はできますが、<br>
                  購入には会員登録が必要になります。
                </p>
              </div>
          </div>
        </div>
        <div class="row">
          <h4 class ="mt-5 ml-5 font-weight-bold" >新着商品</h4>
        </div>
        <div class = "row">
          <div class = "d-flex mx-auto" >
             <% @items.each do |item| %>
              <div class = "card border-0 m-3" >
                <%= link_to item_path(item) do %>
                  <%= image_tag item.image, size: "160x100" %>
                  <p class="card-title text-dark pt-2"><%= item.name %></p>
                <% end %>
                <div class = "item-body font-weight-bold" >
                  ￥<%= item.price.to_s(:delimited) %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="d-flex justify-content-end mr-3 mt-2">
          <%= link_to "全ての商品を見る＞", items_path, class: "btn btn-success" %>
        </div>
      </div>
  </div>
</div>
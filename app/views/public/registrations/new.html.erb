<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name, '(姓)' %>
    <%= f.text_field :last_name, placeholder: '令和' %>
    <%= f.label :first_name, '(名)' %>
    <%= f.text_field :first_name, placeholder: '道子' %>
  </div>
  
  <div class="field">
    <%= f.label :last_name_kana, '(セイ)' %>
    <%= f.text_field :last_name_kana, placeholder: 'レイワ' %>
    <%= f.label :first_name_kana, '(メイ)' %>
    <%= f.text_field :first_name_kana, placeholder: 'ミチコ' %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code, '郵便番号（ハイフンなし）' %>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

<div class="col-9 offset-1">
  <h3 class="mb-5 mini-title">新規会員登録</h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= f.label :名前, class: "col-3" %>
        <%= f.label :last_name, '(姓)', class: "col-1" %>
        <%= f.text_field :last_name, autocomplete: "last_name", placeholder: '令和', class: "form-control  col-3" %>
        <%= f.label :first_name, '(名)', class: "col-1" %>
        <%= f.text_field :first_name, autocomplete: "first_name", placeholder: '道子', class: "form-control  col-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :フリガナ, class: "col-3" %>
      <%= f.label :last_name_kana, '(セイ)', class: "col-1" %>
      <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: 'レイワ', class: "form-control  col-3" %>
      <%= f.label :first_name_kana, '(メイ)', class: "col-1" %>
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: 'ミチコ', class: "form-control  col-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :email, 'メールアドレス', class: "col-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "form-control  col-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :postal_code, '郵便番号（ハイフンなし）', class: "col-4" %>
      <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: '0000000', class: "form-control  col-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :address, '住所', class: "col-4" %>
      <%= f.text_field :address, autocomplete: "address", placeholder: '東京都渋谷区代々木神園町0-0', class: "form-control  col-7" %>
    </div>

    <div class="form-group row">
      <%= f.label :telephone_number, '電話番号（ハイフンなし）', class: "col-4" %>
      <%= f.text_field :telephone_number, autocomplete: "telephone_number", placeholder: '00000000000', class: "form-control col-3" %>
    </div>

    <div class="form-group row">
      <div class="password-form col-4">  
        <%= f.label :password, 'パスワード' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>  
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-3" %>
    </div>

    <div class="form-group row mb-4">
      <%= f.label :password_confirmation, 'パスワード（確認用）', class: "col-4" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-3" %>
    </div>

    <div class="actions mb-5">
      <%= f.submit "新規登録", class: "btn btn-success col-3 offset-3" %>
    </div>
  <% end %>
  
  <div class="col-2"></div>
  <div>
    <h5 class="mini-title">既に登録済みの方</h5>
  </div>
  <div class="offset-1">
    <p><%= render "public/shared/links" %> からログインしてください</p>
  </div>  
</div>
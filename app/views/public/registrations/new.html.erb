<h5><span class="px-2 bg-light border font-weight-bold">新規会員登録</span></h5>
<div class="col-9 offset-1">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= f.label :名前, class: "col-3" %>
        <%= f.label :last_name, '(姓)', class: "col-1" %>
        <%= f.text_field :last_name, autocomplete: "last_name", placeholder: '令和', class: "form-control  col-3" %>
        <%= f.label :first_name, '(名)', class: "col-1" %>
        <%= f.text_field :first_name, autocomplete: "first_name", placeholder: '道子', class: "form-control  col-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :フリガナ, class: "col-3" %>
      <%= f.label :last_name_kana, '(セイ)', class: "col-1" %>
      <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: 'レイワ', class: "pb-1 form-control  col-3" %>
      <%= f.label :first_name_kana, '(メイ)', class: "col-1" %>
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: 'ミチコ', class: "pb-1 form-control  col-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "pb-1 form-control  col-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :postal_code, '郵便番号（ハイフンなし）' %>
      <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: '0000000' %>
    </div>

    <div class="form-group row">
      <%= f.label :address, '住所' %>
      <%= f.text_field :address, autocomplete: "address", placeholder: '東京都渋谷区代々木神園町0-0' %>
    </div>

    <div class="form-group row">
      <%= f.label :telephone_number, '電話番号（ハイフンなし）' %>
      <%= f.text_field :telephone_number, autocomplete: "telephone_number", placeholder: '00000000000' %>
    </div>

    <div class="form-group row">
      <%= f.label :password, 'パスワード' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, 'パスワード（確認用）' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
<div class="col-2">
<div>
  <h5><span class="px-2 bg-light border font-weight-bold">既に登録済みの方</span></h5>
</div>
<p><%= render "public/shared/links" %> からログインしてください</p>
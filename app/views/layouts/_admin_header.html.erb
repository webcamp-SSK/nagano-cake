<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
    <div class="container">
    	<a class="navbar-brand h1" href="/" style="font-size: 36px">Nagano Cake</a>
    	<button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
        <div class="mx-auto"></div>
        <div>
          <ul class="navbar-nav ml-auto d-block">
            <% if admin_signed_in? %>
              <li class="d-inline-block">
           <%= link_to "商品一覧", admin_items_path, class: 'nav-link btn btn-secondary mx-2' %>
              </li>
              <li class="d-inline-block">
           <%= link_to "会員一覧", admin_customers_path, class: 'nav-link btn btn-secondary mx-2' %>
              </li>
              <li class="d-inline-block">
           <%= link_to "注文履歴一覧", admin_root_path, class: 'nav-link btn btn-secondary mx-2' %>
              </li>
              <li class="d-inline-block">
           <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link btn btn-secondary mx-2' %>
              </li>
              <li class="d-inline-block">
           <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link btn btn-secondary mx-2' %>
              </li>
            <% end %>
          </ul>
          <div class="form-inline d-block text-right">
            <%= form_with url: admin_search_path,method: :get, local: true do |f| %>
              <%= f.text_field :content , placeholder:"　　商品名で検索" %>
              <%= f.button :type => "submit", class: "btn btn-outline-success" do %>
                <i class="fas fa-search"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
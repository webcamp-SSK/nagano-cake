<header>
  <nav class="navbar navbar-expand-lg navbar-dark ">
    <div class="container">
    	<a class="navbar-brand h1" href="/" style="font-size: 36px">Nagano Cake</a>
    	<button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <div class="mx-auto"></div>
        <div class= "d-block">
          <ul class="navbar-nav ml-auto d-block">
            <li class="d-inline-block ">
              <%= link_to "About", homes_about_path , class: 'nav-link mx-2', style:"color:white;" %>
            </li>
            <li class="d-inline-block">
              <%= link_to "商品一覧", items_path, class: 'nav-link mx-2', style:"color:white;" %>
            </li>
            <li class="d-inline-block">
              <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link mx-2', style:"color:white;" %>
            </li>
            <li class="d-inline-block">
              <%= link_to "ログイン", new_customer_session_path, method: :get, class: 'nav-link mx-2', style:"color:white;" %>
            </li>
          </ul>
          <div class="form-inline d-block text-right">
            <%= form_with url: search_path,method: :get, local: true do |f| %>
              <%= f.text_field :content, placeholder:"　　商品名で検索" %>
              <%= f.button :type => "submit", class: "btn btn-outline-success" do %>
                <i class="fas fa-search"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
